{   
    "variables": {
        "aws_access_key": "",
        "aws_secret_key": "",
        "aws_region": "",
        "subnet_id": "",
        "source_ami": "",
        "ssh_username": "ubuntu",
        "prod_id": ""
    },
    "builders": [
        {
            "type": "amazon-ebs",
            "access_key": "{{user `aws_access_key`}}",
            "secret_key": "{{user `aws_secret_key`}}",
            "region": "{{user `aws_region`}}",
            "instance_type": "t2.micro",
            "subnet_id": "{{user `subnet_id`}}",
            "source_ami": "{{user `source_ami`}}",
            "ssh_username": "{{user `ssh_username`}}",
            "ami_name": "csye6225_{{timestamp}}",
            "ami_users":["709891834787"],
            "launch_block_device_mappings": [
                {
                    "device_name": "/dev/sda1",
                    "volume_size": 20,
                    "volume_type": "gp2",
                    "delete_on_termination": true
                }
            ]
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "inline": [
                "sleep 30",
                "sudo apt-get update -y",
                "sudo apt install python3.8 -y",
                "sudo apt install python3-pip -y --allow-unauthenticated",
                "pip3 install bcrypt fastapi uvicorn PyMySQL mysql-connector-python boto3 python-multipart pydantic",
                "sudo apt install wget -y",
                "sudo apt-get install ruby-full -y ",
                "cd /home/ubuntu",
                "wget https://aws-codedeploy-us-east-1.s3.us-east-1.amazonaws.com/latest/install",
                "chmod +x ./install",
                "sudo ./install auto",
                "sudo service codedeploy-agent start",
                "sudo service codedeploy-agent status"   dsds
            ]
        }
    ]
}